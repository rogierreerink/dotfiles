#
# ~/.xbindkeysrc
#

# Display
"backlight-preset -inc; notify-backlight"
	Mod4 + XF86MonBrightnessUp
"backlight-preset -dec; notify-backlight"
	Mod4 + XF86MonBrightnessDown
"xbacklight -inc 5; notify-backlight"
	XF86MonBrightnessUp
"xbacklight -inc 5; notify-backlight"
	Alt + b:4
"xbacklight -dec 5; notify-backlight"
	XF86MonBrightnessDown
"xbacklight -dec 5; notify-backlight"
	Alt + b:5
"autorandr -c && ~/.fehbg && killall -SIGUSR1 conky"
	XF86Display
"~/.fehbg"
	XF86Favorites

# Audio
"pamixer -i 5; notify-volume"
	XF86AudioRaiseVolume
"pamixer -i 5; notify-volume"
	Mod4 + b:4
"pamixer -d 5; notify-volume"
	XF86AudioLowerVolume
"pamixer -d 5; notify-volume"
	Mod4 + b:5
"pamixer -t; notify-volume"
	XF86AudioMute
"pamixer --default-source -t; notify-microphone"
	XF86AudioMicMute

# Applications
"code"
	Mod4 + c
"firefox"
	Mod4 + w
"rofi -show run"
	Mod4 + space
"thunar"
	Mod4 + f
"thunderbird"
	Mod4 + m
"xfce4-screenshooter"
	Print
"xfce4-terminal"
	Mod4 + t
